@model QuizApp.Models.ViewModels.StatQuizModel

@{
    ViewData["Title"] = "Details";
}
<div style="margin-left: 3rem;">
<div>
    <h4>Quize @Html.DisplayFor(model => model.Quiz.Id)</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary btn-sm">Back to Quizzes</a>
</div>

<h6  style="margin-top: 5rem;">Quiz  @Model.Quiz.Id Detail</h6>

<table class="table ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> QuizId</th>
            <th scope="col"> UserId</th>
            <th scope="col">Your Reuslt</th>
            <th scope="col">Total Questions</th>
            @* <th scope="col">Handle</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AnswerModels.Select((value, index) => new { Value = value, Index = index + 1 }))
        {
            <tr>
                <th scope="row">@item.Index </th>
                <td>Quiz @Html.DisplayFor(modelItem => item.Value.QuizId)</td>
                <td>@Html.DisplayFor(modelItem => item.Value.UserEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.Value.Total)</td>
                <td>@Html.DisplayFor(modelItem => item.Value.TotalQuestions)</td>
            </tr>
        }
    </tbody>
</table>

</div>