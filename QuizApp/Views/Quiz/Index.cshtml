@model IEnumerable<QuizApp.Models.Domain.Quiz>

@{
    ViewData["Title"] = "Index";
}

<div style="margin-left: 3rem;">
    @if (@ViewData["UserRole"].ToString() != "User")
    {
        <a asp-action="Create" class="btn btn-primary">Create Quiz</a>
    }

    <div class=" d-flex flex-row mt-5 gap-5 flex-wrap">
        @foreach (var item in Model)
        {
            <div class="card " style="width: 30rem;height: 10rem;">

                <div class="card-body d-flex  flex-column ">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Description)</p>
                    @* <a href="#" class="btn btn-primary">Go somewhere</a> *@
                    <div>
                        @if (@ViewData["UserRole"].ToString() != "User")
                        {
                            <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Delete" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Delete</a>
                        }

                        @if (@ViewData["UserRole"].ToString() != "Admin")
                        {

                            <a asp-action="Show" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Take Quiz</a>
                        }

                    </div>
                </div>
            </div>


        }
    </div>
</div>